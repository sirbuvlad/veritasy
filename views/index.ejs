<% include ./partials/header %>
<div class="ui main text container segment">
  <!-- <div class="ui huge header">Portfolio</div> -->
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% for (var i = blogs.length-1; i>=0; i--) {  %>
        <div class="item">
          <div class="image">
            <img class="ui centered rounded image" src="<%= blogs[i].image %>">
          </div>
          <div class="content">
            <a class="header" href="/blogs/<%= blogs[i]._id %>"><%= blogs[i].title %></a>
            <div class="meta">
              <span><%= blogs[i].created.toDateString() %></span>
            </div>
            <div class="description">
              <p><%- blogs[i].body.substring(0, 100) %>...</p>
            </div>
            <div class="extra">
              <a class="ui floated basic violet button" href="/blogs/<%= blogs[i]._id %>">Read More<i class="right chevron icon"></i></a>

            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
      <% include ./partials/footer %>
